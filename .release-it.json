{
  "hooks": {
    "before:init": "pnpm build"
  },
  "git": {
    "requireBranch": "main",
    "commitMessage": "chore(release): ${version}",
    "tagName": "v${version}",
    "requireCleanWorkingDir": true,
    "push": false
  },
  "github": {
    "release": true,
    "tokenRef": "GITHUB_TOKEN"
  },
  "npm": {
    "publish": true,
    "tokenRef": "NPM_TOKEN"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits",
        "types": [
          { "type": "feat", "section": "âœ¨ Features", "hidden": false },
          { "type": "fix", "section": "ğŸ› Fixes", "hidden": false },
          { "type": "chore", "section": "ğŸ“¦ Chores", "hidden": true },
          { "type": "docs", "section": "ğŸ“ Documentation", "hidden": false },
          { "type": "style", "section": "ğŸ’… Styling", "hidden": false },
          { "type": "refactor", "section": "ğŸ”¨ Refactors", "hidden": false },
          { "type": "perf", "section": "âš¡ Performance Improvements", "hidden": false },
          { "type": "test", "section": "âœ… Tests", "hidden": false },
          { "type": "ci", "section": "ğŸ”§ Continuous Integration", "hidden": false }
        ]
      }
    }
  }
}
